@model IEnumerable<OrderViewModel>

<h1>Onbetaalde Bestellingen</h1>
<p>Bestellingen die wachten op bevestiging betaling</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Concert</th>
            <th>Ticket type</th>
            <th>Aantal tickets</th>
            <th>Totale prijs</th>
            <th>Korting</th>
            <th>Klant</th>
            <th>Betaald</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                @order.ConcertArtist - 
                @order.ConcertLocation - 
                @order.ConcertDate.ToString("dd MMM yyyy")
                </td>
                <td>@order.TicketType</td>
                <td>@order.NumTickets</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@(order.DiscountApplied ? "ja" : "nee")</td>
                <td>@order.UserName</td>
                <td>
                    <a asp-action="SetPaid" asp-route-orderId="@order.Id" class="btn btn-outline-primary btn-sm">
                        Bevestig betaling
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>